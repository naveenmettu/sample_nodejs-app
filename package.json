{
  "name": "att-dp-sso",
  "version": "1.0.0",
  "description": "Identity Provider for ATT Data Products",
  "private": true,
  "scripts": {
    "start": "node -r dotenv/config ./bin/www",
    "prettier":
      "./node_modules/.bin/prettier --config ./package.json --write \"{bin,lib,middleware,models,routes,utils}/**/*.{js,jsx,json,css}\"",
    "eslint": "./node_modules/.bin/eslint \"{bin,lib,middleware,models,routes,utils}/**/*.js\"",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-handlebars": "^3.0.0",
    "express-session": "^1.15.6",
    "ldapjs": "^1.0.2",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-session": "^1.0.2",
    "samlp": "^3.4.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7"
  },
  "nodemonConfig": {
    "ignore": ["*.spec.js", "test/*", "docs/*"]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "semi": false
  },
  "lint-staged": {
    "{bin,lib,middleware,models,routes,utils}/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
